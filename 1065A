
#include<bits/stdc++.h>
#include<iostream>
#include<string>
using namespace std;
 
 
int main(){
    int t;
    cin>>t;
    for(int i=0;i<t;i++){
        int64_t  totalFree, total=0;
        long long totalBars;
        int s,a,b,c;
        cin>>s>>a>>b>>c;
        totalBars= s/c;
        totalFree= (totalBars/a)*b;
        total=totalBars+totalFree;
        cout<<total<<endl;
    }
    return 0;
    }
